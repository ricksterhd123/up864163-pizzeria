extends layout

block nav
    nav
        h1 #{title}
        ul
            li
                a(href='/') Home
            li
                a(href='#' class="active") Menu
            li
                a(href='/reviews') Reviews
            li
                div(id="basketBtn")
                    a(href="/order")
                        i(class='fas fa-shopping-cart')
                        // taken from https://stackoverflow.com/questions/149055/how-can-i-format-numbers-as-dollars-currency-string-in-javascript
                        p(id="basketTotal")= "£" + (basket.total).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')
                        p(id="basketNoItems")= "Items: "+basket.items.length
block content
    ul
    - for (let x = 0; x <= menu.length -1; x++)
        li(class=menu[x].type)
            p= menu[x].name
            p= menu[x].description
            p= "£" + menu[x].price
            button(onclick="addToBasket("+ x +")") Add to basket
block append scripts
    script(src='/js/menu.js')